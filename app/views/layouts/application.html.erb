<!DOCTYPE html>
<html>
  <head>
    <title>OCR Tracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
        .flash__alert   { color: red; }
        .flash__notice  { color: blue; }
        .flash__success { color: green; }
    </style>
  </head>

<%#Admin Navbar%>
<% unless !current_user.is_admin? %>
  <% unless current_page?(new_user_session_path) %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
      <%= link_to "OCRTracker", root_path, class: 'navbar-brand' %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "Post", posts_new_path, class: 'nav-link' %>
            </li>
            <li class="nav-item" style="margin-left: 0">
              <%= link_to "#{current_user.full_name}", root_path, class: 'nav-link' %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  <% end %>
<% end %>

<%#User Navbar%>
<% unless current_user.is_admin? %>
  <% unless current_page?(new_user_session_path) %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <%= link_to "OCRTracker", root_path, class: 'navbar-brand' %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "Post", posts_new_path, class: 'nav-link' %>
            </li>
            <li class="nav-item" style="margin-left: 0">
              <%= link_to "#{current_user.full_name}", root_path, class: 'nav-link' %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  <% end %>
<% end %>

  <body>
    <%= yield %>
  </body>
</html>
