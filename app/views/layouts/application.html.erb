<!DOCTYPE html>
<html>
  <head>
    <title>OCR Tracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
        .flash__alert   { color: red; }
        .flash__notice  { color: blue; }
        .flash__success { color: green; }
    </style>
  </head>

<% if !current_page?(new_user_session_path) %>
<%#Admin Navbar%>
<% unless !current_user.is_admin? %>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
    <%= link_to "OCR Tracker", root_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "Submit Scores", submissions_create_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "Leaderboard", root_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "WOD", root_path, class: 'nav-link' %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Management
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
              <li><%= link_to "Exercises", exercises_path, class: 'nav-link' , style: "color: black"%></li>
              <li><%= link_to "New Post", posts_new_path, class: 'nav-link' , style: "color: black"%></li>
              <li><%= link_to "Set WOD", root_path, class: 'nav-link' , style: "color: black"%></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to "Permissions", root_path, class: 'nav-link' , style: "color: black"%></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= "#{current_user.full_name}"%>
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
              <li><%= link_to "View Profile", root_path, class: 'nav-link' , style: "color: black"%></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, class: 'nav-link' , style: "color: black"%></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>
<% end %>
<%#User Navbar%>
<% unless current_user.is_admin? %>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <%= link_to "OCR Tracker", root_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "Submit Scores", root_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "Leaderboard", root_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "WOD", root_path, class: 'nav-link' %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= "#{current_user.full_name}"%>
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
              <li><%= link_to "View Profile", root_path, class: 'nav-link' , style: "color: black"%></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, class: 'nav-link' , style: "color: black"%></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>
<% end %>
  <% else %>
   <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">OCR Tracker</a>
      </div>
    </nav>
<% end %>

  <body>
    <%= yield %>
  </body>
</html>
