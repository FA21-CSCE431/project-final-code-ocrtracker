<!DOCTYPE html>
<html>

    <head>
        <%= stylesheet_link_tag  'exercises', media: 'all', 'data-turbolinks-track': 'reload' %>
    </head>

    <body id="exercises">
        
        <h1>Edit Exercise</h1>
        
        <div class="container-fluid">
            <div class = "row">
                <div class="col-1 col-lg-2">
                    <br>
                </div>

                <div class="content col-10 col-lg-8">
                    <%= render 'form', exercise: @exercise %>
                    <%= button_to "Back", exercises_path, :method => "get",:class => "universal-button", :style => "margin-left: 0%; display: inline; float: left; display: flex; flex-wrap: wrap;" %>
                    <br>
                    <br>
                    <hr>
                <%= button_to "Archive Exercise", archive_exercise_path(@exercise.id), :method => "post",:class => "universal-button", :style => "margin-left: 0%; display: block; float: left; display: flex; flex-wrap: wrap;", data: {confirm: "Are you sure you want to archive #{@exercise.title}?"} %>
                </div>

                <div class="col-1 col-lg-2">
                    <br>
                </div>
            </div>
        </div>
    </body>
</html>

