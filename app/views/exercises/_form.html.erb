<%= form_with(model: exercise) do |form| %>

  <% if exercise.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(exercise.errors.count, "error") %> prohibited this exercise from being saved:</h2>

      <ul>
        <% exercise.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2 style="text-align: center;">
    
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control'%>
    
  </h2>
  <br>
  
  <h2 style="text-align: center;">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control'%>
  </h2>

  <br>

  <p style="text-align: center;">
    <%= form.label :unit_name %>
    <%= form.select :unit_name, Exercise.unit_names.map{|key, value| [value, key]} %>
  </p>
  <br>

  <div class="field"> 
    <% if exercise.image.attached? %>
      <%= image_tag exercise.image, style: "width: 100px; display: block" %>
    <% end %>
    <%= form.file_field :image, style: "display: block" %>
  </div>
  <b>

  <div class="row">
                              
    <div class="actions col-12 d-flex justify-content-end">
      <%= form.submit "Submit", :class => "universal-button"%>
    </div>
  </div>
<% end %>
