<!DOCTYPE html>
<html>

  <head>
      <%= stylesheet_link_tag  'exercises', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id="exercises">
    <h1>Exercises</h1>

    <div class="container-fluid">
      <div class = "row">

        <div class="col-1 col-lg-2">
          <br>
        </div>

        <div class="content col-10 col-lg-8">
          <%= link_to 'New Exercise', new_exercise_path %>
          <div class="table-responsive">
            <table>
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Description</th>
                  <th>Image</th>
                  <th>Unit Name</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @exercises.each do |exercise| %>
                  <tr>
                    <td><%= exercise.title %></td>
                    <td><%= exercise.description %></td>
                    <td>
                      <% if exercise.image.attached? %>
                        <%= image_tag exercise.image, style: "width: 100px; display: block" %>
                      <% end %>
                    </td>
                    <td><%= exercise.humanized_unit_name %></td>
                    <td style="width:5%"><%= link_to 'Show', exercise %> <%= link_to 'Edit', edit_exercise_path(exercise) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="col-1 col-lg-2">
          <br>
        </div>

      </div>

    </div>
  </body>
</html>
