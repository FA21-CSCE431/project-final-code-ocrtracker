<!DOCTYPE html>
<html>

  <head>
      <%= stylesheet_link_tag  'exercises', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id="exercises">
    <h1>Exercises</h1>

    <div class="container-fluid">
      <div class = "row">

        <div class="col-1 col-lg-2">
          <br>
        </div>

        <div class="content col-10 col-lg-8">
          <%= button_to "New Exercise", new_exercise_path, :method => "get",:class => "universal-button", :style => "" %>
          <br>
          <div class="table-responsive">
            <table>
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Description</th>
                  <th>Unit Name</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @exercises.each do |exercise| %>
                  <tr>
                    <td><%= exercise.title %></td>
                    <td><%= exercise.description %></td>
                    <td><%= exercise.humanized_unit_name %></td>
                    <td><%= button_to "Show", exercise_path(exercise), :method => "get",:class => "universal-button", :style => "margin-left: 40%; display: inline; float: left; display: flex; flex-wrap: wrap;" %></td>
                    <td><%= button_to "Edit", edit_exercise_path(exercise), :method => "get",:class => "universal-button", :style => "margin-left: 20%; display: inline; float: left; display: flex; flex-wrap: wrap; margin-left: 5%" %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="col-1 col-lg-2">
          <br>
        </div>

      </div>

    </div>
  </body>
</html>
