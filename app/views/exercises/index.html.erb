<!DOCTYPE html>
<html>

  <head>
      <%= stylesheet_link_tag  'exercises', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id="exercises">
    <br>
    <h1>Exercises</h1>
    <br>
    <div class="container">
      <%= link_to 'New Exercise', new_exercise_path %>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Image</th>
            <th>Unit name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @exercises.each do |exercise| %>
            <tr>
              <td><%= exercise.title %></td>
              <td><%= exercise.description %></td>
              <td>
                <% if exercise.image.attached? %>
                  <%= image_tag exercise.image, style: "width: 100px; display: block" %>
                <% end %>
              </td>
              <td><%= exercise.humanized_unit_name %></td>
              <td style="width:5%"><%= link_to 'Show', exercise %></td>
              <td style="width:5%"><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

    </div>
  </body>
</html>
