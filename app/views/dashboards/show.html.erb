<html>
  <head>
    <%= stylesheet_link_tag  'dashboards', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="jumbotron">
      <div class="container-fluid text-center">    
        <div class="row">
          <div class="col-2 col-lg-3">
            <br>
          </div>
          
          <div class="col-8 col-lg-6 text-left" style="background: rgba(25, 25, 30, 0.9); padding: 2%;">
            <h1>Welcome, <%= current_user.full_name %></h1>

            <h2><%= WorkoutSubmission.count %> total workouts completed</h2>
          </div>

          <div class="col-2 col-lg-3">
            <br>
          </div>
        </div>  

        <div class="row">
          <div class="col-1 col-lg-2">
              <br>
          </div>
            
          <div class="col-10 col-lg-8 trendline-chart">
            <%= line_chart WorkoutSubmission.trendline, xtitle: 'Date', ytitle: 'Workouts completed', precision:0, colors: ["#4d5152", "#666"]%>

            <%# example_data = [["October 28", 5], ["October 29", 5], ["October 30", 6], ["October 31", 4], ["November 1", 7]] %>
            <%# line_chart example_data, xtitle: 'Date', ytitle: 'Workouts completed', precision:0,  %>
          </div>

          <div class="col-1 col-lg-2">
            <br>
          </div>

        </div>
      </div>
    </div>

  </body>
</html>
