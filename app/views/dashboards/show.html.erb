<html>
  <head>
    <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag  'dashboards', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1>You're logged in! Welcome to the User Dashboard!</h1>
    <% if current_user.is_admin? %>
      <h2>Howdy <%= current_user.full_name %> as admin</h2>
    <% else %>
    <h2>Howdy <%= current_user.full_name %> as user</h2>
    <% end %>
    <div>
      <%= link_to "Sign Out", destroy_user_session_path %>
    </div>
  </body>
  
</html>
