<html>
  <head>
    <%= stylesheet_link_tag  'dashboards', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid text-center">    
      <div class="row" style="margin-top: 5%">
        <div class="col-sm-2">
          <br>
        </div>
        <div class="col-sm-8 text-left" style="background: rgba(25, 25, 30, 0.85);"> 
          <h1>Welcome, <%= current_user.full_name %></h1>
          <hr>
        </div>
        <div class="col-sm-2">
        <br>
        </div>
      </div>  
    </div>

    <div class='trendline-chart'>
      <%= column_chart WorkoutSubmission.trendline, xtitle: 'Date', ytitle: 'Workouts completed', precision:0 %>

      <%# example_data = [["October 28", 5], ["October 29", 5], ["October 30", 6], ["October 31", 4], ["November 1", 7]] %>
      <%# column_chart example_data, xtitle: 'Date', ytitle: 'Workouts completed', precision:0 %>
    </div>

    <div>
      <p>Total workouts completed: <%= WorkoutSubmission.count %></p>
    </div>


  </body>
  
</html>
